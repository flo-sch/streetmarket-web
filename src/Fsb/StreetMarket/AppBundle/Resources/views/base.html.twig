{% extends '::base.html.twig' %}

{% block metas %}
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
{% endblock %}

{% block body %}
    <nav class='navbar navbar-fixed-top navbar-default'>
        <div class='container'>
            <div class='navbar-header'>
                <a class='navbar-brand' href='{{ path('fsb_street_market_app_homepage') }}'>StreetMarket</a>
                <ul id='camera-links' class='nav navbar-nav navbar-right pull-right' v-if='isCompatible'>
                    <li v-if='!isRecording && !isLookingForSources'><a href='#record' v-on='click: record'>Camera</a></li>
                    <li v-if='isRecording && sources.length > 1'><a href='#reverse' v-on='click: reverseVideo'>Reverse</a></li>
                    <li v-if='isRecording'><a id='stop-button' href='#stop' v-on='click: stopRecording'>Stop</a></li>
                </ul>
            </div>
        </div>
    </nav>
    {% block app_container %}{% endblock %}
{% endblock %}